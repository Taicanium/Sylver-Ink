<UserControl x:Class="SylverInk.XAML.NoteTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:SylverInk.XAML" xmlns:sylverink="clr-namespace:SylverInk"
			 mc:Ignorable="d"
			 d:DataContext="{d:DesignInstance Type=sylverink:ContextSettings}"
			 Loaded="NoteTab_Loaded">
	<UserControl.Resources>
		<ResourceDictionary>
			<Style x:Key="ToolbarButton" TargetType="Button">
				<Setter Property="Background" Value="{Binding ListBackground}"/>
				<Setter Property="CommandTarget" Value="{Binding ElementName=NoteBox}"/>
				<Setter Property="Foreground" Value="{Binding ListForeground}"/>
				<Setter Property="Width" Value="30"/>
			</Style>
		</ResourceDictionary>
	</UserControl.Resources>
    <Grid Margin="2" x:Name="MainGrid">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Label FontStyle="Italic" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Bottom" x:Name="RevisionLabel"/>
		<Grid Grid.Row="1" x:Name="NoteToolbar">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Button Style="{StaticResource ToolbarButton}" Command="ApplicationCommands.Undo" Content="↶" ToolTip="Undo"/>
				<Button Style="{StaticResource ToolbarButton}" Command="ApplicationCommands.Redo" Content="↷" Grid.Column="1" ToolTip="Redo"/>
			</Grid>
			<Grid Grid.Column="2">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Button Style="{StaticResource ToolbarButton}" Command="EditingCommands.ToggleBold" ToolTip="Bold">
					<TextBlock FontWeight="Bold">B</TextBlock>
				</Button>
				<Button Style="{StaticResource ToolbarButton}" Command="EditingCommands.ToggleItalic" Grid.Column="1" ToolTip="Italic">
					<TextBlock FontStyle="Italic" FontWeight="Bold">I</TextBlock>
				</Button>
				<Button Style="{StaticResource ToolbarButton}" Command="EditingCommands.ToggleUnderline" Grid.Column="2" ToolTip="Underline">
					<TextBlock TextDecorations="Underline" FontWeight="Bold">U</TextBlock>
				</Button>
			</Grid>
			<Grid Grid.Column="4">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Button Style="{StaticResource ToolbarButton}" Command="EditingCommands.AlignLeft" ToolTip="Left">
					<StackPanel>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="0" X2="16" Y1="2" Y2="2"/>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="0" X2="8" Y1="3" Y2="3"/>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="0" X2="12" Y1="3" Y2="3"/>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="0" X2="8" Y1="3" Y2="3"/>
					</StackPanel>
				</Button>
				<Button Style="{StaticResource ToolbarButton}" Command="EditingCommands.AlignCenter" Grid.Column="1" ToolTip="Center">
					<StackPanel>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="0" X2="16" Y1="2" Y2="2"/>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="4" X2="12" Y1="3" Y2="3"/>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="2" X2="14" Y1="3" Y2="3"/>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="4" X2="12" Y1="3" Y2="3"/>
					</StackPanel>
				</Button>
				<Button Style="{StaticResource ToolbarButton}" Command="EditingCommands.AlignRight" Grid.Column="2" ToolTip="Right">
					<StackPanel>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="0" X2="16" Y1="2" Y2="2"/>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="8" X2="16" Y1="3" Y2="3"/>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="4" X2="16" Y1="3" Y2="3"/>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="8" X2="16" Y1="3" Y2="3"/>
					</StackPanel>
				</Button>
				<Button Style="{StaticResource ToolbarButton}" Command="EditingCommands.AlignJustify" Grid.Column="3" ToolTip="Justify">
					<StackPanel>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="0" X2="16" Y1="2" Y2="2"/>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="0" X2="16" Y1="3" Y2="3"/>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="0" X2="16" Y1="3" Y2="3"/>
						<Line Stroke="{Binding ListForeground}" StrokeThickness="1" X1="0" X2="16" Y1="3" Y2="3"/>
					</StackPanel>
				</Button>
			</Grid>
			<Grid Grid.Column="6">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Button Style="{StaticResource ToolbarButton}" Command="EditingCommands.IncreaseFontSize" ToolTip="Increase Font Size">
					<TextBlock FontWeight="Bold">A↑</TextBlock>
				</Button>
				<Button Style="{StaticResource ToolbarButton}" Command="EditingCommands.DecreaseFontSize" Grid.Column="1" ToolTip="Decrease Font Size">
					<TextBlock FontWeight="Bold">a↓</TextBlock>
				</Button>
			</Grid>
			<Grid Grid.Column="8">
				<Button Style="{StaticResource ToolbarButton}" Click="SelectColor" ToolTip="Text color..." x:Name="TextColorButton">
					<Path Fill="Black" Stroke="White" StrokeThickness="0.5" Data="M13.354.646a1.207 1.207 0 0 0-1.708 0L8.5 3.793l-.646-.647a.5.5 0 1 0-.708.708L8.293 5l-7.147 7.146A.5.5 0 0 0 1 12.5v1.793l-.854.853a.5.5 0 1 0 .708.707L1.707 15H3.5a.5.5 0 0 0 .354-.146L11 7.707l1.146 1.147a.5.5 0 0 0 .708-.708l-.647-.646 3.147-3.146a1.207 1.207 0 0 0 0-1.708zM2 12.707l7-7L10.293 7l-7 7H2z"/>
				</Button>
			</Grid>
		</Grid>
		
		<local:ColorPicker x:Name="TextColorPicker"/>

		<Popup Height="75" IsOpen="False" StaysOpen="True" Width="300" x:Name="InternalSearchPopup">
			<Border BorderBrush="{Binding MenuForeground}" BorderThickness="1">
				<Grid Background="{Binding MenuBackground}">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
					</Grid.RowDefinitions>
					<Label Content="Search:"/>
					<TextBox Grid.Column="1" Grid.ColumnSpan="3" Width="200" x:Name="ISPText"/>
					<Button Click="FindPrevious" Content="Previous..." Grid.ColumnSpan="2" Grid.Row="1"/>
					<Button Click="FindNext" Content="Next..." Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1"/>
					<Button Click="CloseISP" Content="Close" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1"/>
				</Grid>
			</Border>
		</Popup>

		<RichTextBox AcceptsReturn="True" Grid.Row="2" SelectionChanged="NoteBox_SelectionChanged" TextChanged="NoteBox_TextChanged" UndoLimit="10"
					VerticalScrollBarVisibility="Auto"
					x:Name="NoteBox"/>
		
		<Grid HorizontalAlignment="Center" Margin="0,20" Grid.Row="3" x:Name="ButtonGrid">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="15"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<Button Click="ClickPrevious" Grid.ColumnSpan="2" Content="←" Width="50" x:Name="PreviousButton"/>
			<Button Click="ClickNext" Grid.Column="1" Grid.ColumnSpan="2" Content="→" Width="50" x:Name="NextButton"/>
			
			<Button Click="ClickDelete" Content="Delete" Grid.Row="2" x:Name="DeleteButton"/>
			<Button Click="ClickSave" Grid.Column="1" Content="Save" Margin="20,0" Grid.Row="2" x:Name="SaveButton"/>
			<Button Click="ClickReturn" Grid.Column="2" Content="Return" Grid.Row="2" x:Name="ReturnButton"/>
		</Grid>
	</Grid>
</UserControl>
