<UserControl x:Class="SylverInk.XAML.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SylverInk.XAML"
			 xmlns:sylverink="clr-namespace:SylverInk"
			 mc:Ignorable="d"
			 d:DataContext="{d:DesignInstance Type=sylverink:ContextSettings}">
	<Grid>
		<local:CustomColorPicker x:Name="CustomColorPicker"/>
		<Popup Height="400" IsOpen="False" Placement="Mouse" PopupAnimation="Fade" StaysOpen="False" Width="265" x:Name="ColorSelection">
			<Border BorderBrush="{Binding MenuForeground}" BorderThickness="1">
				<Grid Background="{Binding MenuBackground}" x:Name="ColorGrid"/>
			</Border>
		</Popup>
	</Grid>
</UserControl>
