<UserControl x:Class="SylverInk.XAML.CustomColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SylverInk.XAML"
			 xmlns:sylverink="clr-namespace:SylverInk"
			 mc:Ignorable="d"
			 d:DataContext="{d:DesignInstance Type=sylverink:ContextSettings}">
	<Popup Closed="CustomColorFinished" Height="40" IsOpen="False" Opened="CustomColorOpened" Placement="Mouse" PopupAnimation="Fade" StaysOpen="False" Width="130" x:Name="CustomColorSelection">
		<Border BorderBrush="{Binding MenuForeground}" BorderThickness="1">
			<Grid Background="{Binding MenuBackground}">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<Border BorderBrush="{Binding MenuForeground}" BorderThickness="1" Height="20" Margin="10,0" Width="20">
					<Rectangle Stretch="UniformToFill" x:Name="CustomColor"/>
				</Border>
				<TextBox Grid.Column="1" HorizontalAlignment="Center" HorizontalContentAlignment="Center" KeyDown="CustomColorKeyDown" TextChanged="NewCustomColor" ToolTip="Hex code (RGB or ARGB)" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="75" x:Name="CustomColorBox"/>
			</Grid>
		</Border>
	</Popup>
</UserControl>
