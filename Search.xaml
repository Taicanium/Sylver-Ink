<Window x:Class="SylverInk.Search"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:SylverInk"
		mc:Ignorable="d"
		d:DataContext="{d:DesignInstance Type=local:ContextSettings}"
		SizeChanged="Search_SizeChanged"
		Title="Sylver Ink: Search" Height="525" Width="350" MinWidth="350" MinHeight="275" Background="Beige" ResizeMode="CanResize">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="150"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<StackPanel>
			<Label Foreground="Gray" Margin="0,20,40,0" HorizontalAlignment="Right" FontStyle="Italic" Content="Search text"/>
			<TextBox x:Name="SearchText" Margin="20,0"/>
			<Button Content="Query" Margin="0,50,0,0" Click="Query_Click"/>
		</StackPanel>
		<ListBox Grid.Row="1" Margin="20,0,20,20" x:Name="Results" ItemsSource="{Binding SearchResults}" AlternationCount="2">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Path=Preview}"/>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</Window>
