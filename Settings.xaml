<Window x:Class="SylverInk.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SylverInk"
    mc:Ignorable="d"
    Title="Sylver Ink: Settings" Height="450" Width="325" MinHeight="450" MinWidth="300"
		Loaded="Settings_Loaded"
		Background="Beige">
	<Grid Background="Gray">
		<Grid.Resources>
			<Style TargetType="{x:Type Grid}">
				<Setter Property="Background" Value="Beige"/>
				<Setter Property="Margin" Value="0,1"/>
			</Style>

			<Style TargetType="{x:Type Label}">
				<Setter Property="FontStyle" Value="Italic"/>
				<Setter Property="Foreground" Value="Gray"/>
				<Setter Property="HorizontalAlignment" Value="Right"/>
				<Setter Property="Margin" Value="10,5"/>
				<Setter Property="VerticalAlignment" Value="Center"/>
			</Style>
			
			<Style TargetType="{x:Type StackPanel}">
				<Setter Property="Margin" Value="10,5"/>
			</Style>
		</Grid.Resources>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="2*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Grid Margin="-1,0,0,1">
			<Label>
				<TextBlock>
					Restore the database<LineBreak/>
					to a previous state
				</TextBlock>
			</Label>
		</Grid>
		<Grid Grid.Column="1" Margin="-1,0,0,1">
			<StackPanel VerticalAlignment="Center" Margin="0,0,10,0">
				<Popup x:Name="TimeSelector" Width="90" Height="25" Placement="Mouse" StaysOpen="False">
					<Grid Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<ComboBox Name="Hour" SelectionChanged="Hour_Selected"/>
						<ComboBox Name="Minute" Grid.Column="1" SelectionChanged="Minute_Selected"/>
					</Grid>
				</Popup>
				
				<DatePicker x:Name="ReversionDate" MaxWidth="120" SelectedDateChanged="SelectedDateChanged"/>
				<Button x:Name="SelectedTime" Margin="0,5" Width="70" Content="12:00 AM" FontStyle="Normal" Foreground="Black" Click="SelectTime"/>
				<Button x:Name="RestoreButton" Margin="0,10" Content="Restore" IsEnabled="False" Click="RestoreClick"/>
			</StackPanel>
		</Grid>
		<Grid Grid.Row="1" Margin="-1,0,0,1">
			<Label Foreground="Red" FontWeight="Bold" Content="Reset the database"/>
		</Grid>
		<Grid Grid.Row="1" Margin="-1,0,0,1" Grid.Column="1">
			<Button Margin="0,0,10,0" Content="Erase" Click="EraseClick"/>
		</Grid>
		<Grid Grid.Row="2" Margin="-1,0,0,1"/>
		<Grid Grid.Row="2" Margin="-1,0,0,1" Grid.Column="1"/>

		<Button Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="0,40" Content="Close" Click="CloseClick"/>
	</Grid>
</Window>