<Window x:Class="SylverInk.SearchResult"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:SylverInk"
		mc:Ignorable="d"
		d:DataContext="{d:DesignInstance Type=local:ContextSettings}"
		Background="{Binding MenuBackground}" Closed="Result_Closed" Height="350" Loaded="Result_Loaded" Title="Sylver Ink: Search Result" Width="350">
	<Grid>
		<StackPanel>
			<TextBox AcceptsReturn="True" Height="220" Margin="0,20,0,0" MaxLines="80" TextChanged="ResultBlock_TextChanged"
					TextWrapping="WrapWithOverflow" VerticalContentAlignment="Top"
					ScrollViewer.VerticalScrollBarVisibility="Auto"
					Width="250" x:Name="ResultBlock"/>
			<Label FontStyle="Italic" HorizontalAlignment="Center" Margin="0,5,0,0" x:Name="LastChangedLabel"/>
			<StackPanel Margin="0,5,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
				<Button Margin="15,0" Content="View..." Click="ViewClick"/>
				<Button Margin="15,0" Content="Save" Click="SaveClick" IsEnabled="False" x:Name="SaveButton"/>
				<Button Margin="15,0" Content="Close" Click="CloseClick"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
