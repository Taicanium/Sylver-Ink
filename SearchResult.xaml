<Window x:Class="SylverInk.SearchResult"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:SylverInk"
		mc:Ignorable="d"
		d:DataContext="{d:DesignInstance Type=local:NoteSettings}"
		Title="Sylver Ink: Search Result" Height="350" Width="350"
		Loaded="Result_Loaded" Closed="Result_Closed"
		Background="Beige">
	<Grid>
		<StackPanel>
			<TextBox x:Name="ResultBlock" Height="220" Width="250" Margin="0,20,0,0" TextWrapping="WrapWithOverflow"
				   MaxLines="80" AcceptsReturn="True" TextChanged="ResultBlock_TextChanged"
				   ScrollViewer.VerticalScrollBarVisibility="Auto"/>
			<Label Margin="0,5,0,0" HorizontalAlignment="Center" FontStyle="Italic" Content="{Binding LastChanged}"/>
			<StackPanel Margin="0,5,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
				<Button Margin="15,0" Content="View..." Click="ViewClick"/>
				<Button Margin="15,0" Content="Save" Click="SaveClick" IsEnabled="{Binding Edited}"/>
				<Button Margin="15,0" Content="Close" Click="CloseClick"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
