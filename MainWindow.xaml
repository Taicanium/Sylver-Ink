<Window x:Class="SylverInk.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:SylverInk"
		mc:Ignorable="d"
		d:DataContext="{d:DesignInstance Type=local:ContextSettings}"
		Loaded="MainWindow_Loaded" SizeChanged="MainWindow_SizeChanged" Closing="MainWindow_Closing"
		Title="Sylver Ink" Height="600" Width="450" MinWidth="400" MinHeight="425" ResizeMode="CanResize"
		Background="Khaki">
	<Grid x:Name="MainGrid">
		<TabControl x:Name="MainTabPanel" Background="Beige">
			<TabItem x:Name="PlusTab" Header="+">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					<Grid Margin="10">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>
						<Label Foreground="Gray" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontStyle="Italic" Content="Recent notes"/>
						<ListBox Grid.Row="1" x:Name="RecentNotes" ItemsSource="{Binding RecentNotes}" AlternationCount="2">
							<ListBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Path=Preview}"/>
								</DataTemplate>
							</ListBox.ItemTemplate>
						</ListBox>
					</Grid>
					<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
						<Label Foreground="Gray" FontStyle="Italic" Content="New note"/>
						<Label Foreground="Blue" Content="(?)" ToolTip="Write a line of text and press Enter to create a new entry."/>
					</StackPanel>
					<TextBox Grid.Row="2" x:Name="NewNoteBox" Margin="5" KeyDown="NewNote" VerticalAlignment="Top"/>
					<Grid Grid.Row="4" Margin="0,40,0,80">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<Button Content="Search" Click="Button_Click"/>
						<Button Grid.Column="1" Content="Replace" Click="Button_Click"/>
						<Button Grid.Column="2" Content="Import" Click="Button_Click"/>
						<Button Grid.Column="3" Content="Exit" Background="Khaki" Click="Button_Click"/>
					</Grid>
				</Grid>
			</TabItem>
		</TabControl>
		<Label HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="8,8"
				   Foreground="Gray" FontStyle="Italic" FontWeight="Light"
				   Content="{Binding VersionString}"/>
	</Grid>
</Window>
